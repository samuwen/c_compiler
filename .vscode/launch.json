  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'c_compiler'",
      "cargo": {
        "args": ["build", "--bin=c_compiler", "--package=c_compiler"],
        "filter": {
          "name": "c_compiler",
          "kind": "bin"
        }
      },
      "args": ["src/data/return_2.c"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'c_compiler'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=c_compiler",
          "--package=c_compiler"
        ],
        "filter": {
          "name": "c_compiler",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
